<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_padding">

        <TextView
            android:id="@+id/phramaze_text_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small_padding"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="italic"
            tools:text="If your phone rings that means someone wants to talk to you"/>

        <TextView
            android:id="@+id/phramaze_creation_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/phramaze_text_text_view"
            tools:text="1/1/2017"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>